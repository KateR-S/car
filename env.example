# Copy this file to .env and fill in your values
# Never commit . env to git! 

# Admin password for the app
ADMIN_PASS=your_admin_password_here

# Database backend:  set to 'true' to use Neon PostgreSQL, 'false' or leave empty for JSON file
USE_NEON=false

# Neon Database credentials (only needed if USE_NEON=true)
# Get these from your Neon dashboard:  https://console.neon.tech/
DB_ROLE=your_neon_role
DB_PASS=your_neon_password
DB_NAME=your_neon_project_name
DB_DATABASE=your_database_name

# Optional: Database connection pool settings
DB_POOL_MIN=1
DB_POOL_MAX=5

# Optional: Cache TTL in seconds (default:  5 minutes)
CACHE_TTL=300